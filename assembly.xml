<?xml version="1.0" encoding="UTF-8"?>  
  <assembly  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"  
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
       xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2  http://maven.apache.org/xsd/assembly-1.1.2.xsd  ">  
       <formats>  
            <format>zip</format>  
       </formats>  
       <includeBaseDirectory>false</includeBaseDirectory>
       <fileSets>
       		<fileSet>
       			 <directory>src/main/resources/doc</directory>
       			 <outputDirectory>/doc</outputDirectory>
       		</fileSet>
       </fileSets>
       <files>  
            <file>  
                 <outputDirectory>/</outputDirectory>  
                 <source>target/apprenda-plugin.jar</source>  
            </file>
            <file>
            	 <outputDirectory>/</outputDirectory>
            	 <source>src/main/resources/plugin/info.xml</source>
            </file>
            <file>
            	 <outputDirectory>/</outputDirectory>
            	 <source>src/main/resources/plugin/plugin.xml</source>
            </file>
            <file>
            	 <outputDirectory>/</outputDirectory>
            	 <source>src/main/resources/plugin/upgrade.xml</source>
            </file>  
            
       </files>
       <dependencySets>  
            <dependencySet>  
                <outputDirectory>lib</outputDirectory>  
                <useStrictFiltering>true</useStrictFiltering>  
                <useProjectArtifact>false</useProjectArtifact>  
                <scope>runtime</scope>
		       	<excludes>
		       		<exclude>org.codehaus.groovy:groovy-all</exclude>
		       		<exclude>org.spockframework:spock-core</exclude>
		       	</excludes>
            </dependencySet>  
       </dependencySets>  
 </assembly> 